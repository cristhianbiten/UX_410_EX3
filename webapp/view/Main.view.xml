<mvc:View
    controllerName="student28.sap.training.diagram.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:suite="sap.suite.ui.commons"
    xmlns:viz="sap.viz.ui5.controls"
>
    <f:DynamicPage
        id="dynamicPageId"
        headerExpanded="true"
        toggleHeaderOnTitleClick="true"
    >
        <f:title>
            <f:DynamicPageTitle id="idDynamicPageTitle">
                <f:heading>
                    <Title
                        id="pageTitle"
                        text="{i18n>pageTitle}"
                    />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
            <suite:ChartContainer
                autoAdjustHeight="true"
                contentChange="onContentChange"
                id="idChartContainer"
                showFullScreen="true"
                showLegend="true"
                showPersonalization="false"
                title="{i18n>diagramTitle}"
            >
                <suite:dimensionSelectors>
                    <Select
                        id="idDimSelector"
                        visible="true"
                        change="onChange"
                    />
                </suite:dimensionSelectors>
                <suite:content>
                    <suite:ChartContainerContent
                        icon="sap-icon://line-chart"
                        title="{i18n>lineChartTitle}"
                        id="idChartContainerContent1"
                    >
                        <suite:content>
                            <viz:Popover id="idLineChartPopover" />
                            <viz:VizFrame
                                id="idLineChartVizFrame"
                                height="9.1rem"
                                width="100%"
                                uiConfig="{applicationSet:'fiori'}"
                            />
                        </suite:content>
                    </suite:ChartContainerContent>
                    <suite:ChartContainerContent
                        icon="sap-icon://vertical-bar-chart"
                        title="{i18n>barChartTitle}"
                        id="idChartContainerContent2"
                    >
                        <suite:content>
                            <viz:VizFrame
                                id="idBarChartVizFrame"
                                height="9.1rem"
                                width="100%"
                                uiConfig="{applicationSet:'fiori'}"
                            />
                        </suite:content>
                    </suite:ChartContainerContent>
                    <suite:ChartContainerContent
                        icon="sap-icon://table-chart"
                        title="{i18n>tableTitle}"
                        id="idChartContainerContent3"
                    >
                        <suite:content>
                            <Table id="idTable">
                                <headerToolbar>
                                    <OverflowToolbar id="idOverflowToolbar">
                                        <content>
                                            <Title
                                                text="{i18n>tableheader}"
                                                level="H2"
                                                id="titleOverflowToolbar"
                                            />
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                            </Table>
                        </suite:content>
                    </suite:ChartContainerContent>
                </suite:content>
            </suite:ChartContainer>
        </f:content>
    </f:DynamicPage>
</mvc:View>
